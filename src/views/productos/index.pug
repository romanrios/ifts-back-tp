extends ../layout

block content
  .d-flex.justify-content-between.align-items-center.mb-3.flex-wrap
    h2.mb-0 Lista de Productos
    a.btn.btn-success.mt-2.mt-sm-0(href="/productos/agregar") Agregar Producto

  .table-responsive
    table.table.table-bordered.table-sm
      thead
        tr
          th Nombre
          th Precio
          th.acciones Acciones
      tbody
        each producto in productos
          tr
            td(style="vertical-align: middle;")= producto.nombre
            td(style="vertical-align: middle;")= producto.precio
            td.acciones.d-flex.gap-1.align-items-center(style="white-space: nowrap;")
              a.btn.btn-sm.btn-light(href=`/productos/${producto._id}` title="Ver") 
                i(class="bi-eye fs-5") 
              a.btn.btn-sm.btn-light(href=`/productos/${producto._id}/editar` title="Editar") 
                i(class="bi-pencil fs-5")
              a.btn.btn-sm.btn-light(href=`/productos/${producto._id}/borrar` title="Borrar") 
                i(class="bi-trash fs-5")
