extends ../layout

block content
  h2.mb-3 Confirmar borrado

  p.mb-2 ¿Eliminar este producto?  

  ul
    li ID: #{producto._id}
    li Nombre:#{producto.nombre}
    li Precio: #{producto.precio}

  form(action=`/productos/${producto._id}?_method=DELETE` method="POST").d-flex.gap-2.mt-3
    button.btn.btn-danger(type="submit") Sí, borrar
    a.btn.btn-secondary(href="/productos") Cancelar
