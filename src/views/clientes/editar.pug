extends ../layout.pug

block content
    h2.mb-4 Editar Cliente: #{cliente.nombre}
    
    .row.justify-content-center
        .col-md-6
            // Formulario que enviará los datos al router.put("/:id") usando method-override
            form(action=`/clientes/${cliente._id}?_method=PUT`, method="POST")
                
                // Campo Nombre
                .mb-3
                    label.form-label(for="nombre") Nombre Completo
                    input.form-control(type="text", id="nombre", name="nombre", required, value=cliente.nombre)
                
                // Campo Teléfono
                .mb-3
                    label.form-label(for="telefono") Teléfono
                    input.form-control(type="text", id="telefono", name="telefono", required, value=cliente.telefono)
                
                // Campo Email
                .mb-3
                    label.form-label(for="email") Email
                    input.form-control(type="email", id="email", name="email", value=cliente.email || '')
                
                // Campo Dirección
                .mb-3
                    label.form-label(for="direccion") Dirección
                    input.form-control(type="text", id="direccion", name="direccion", value=cliente.direccion || '')

                // Botones de Acción
                .d-flex.gap-2.mt-4
                    button.btn.btn-warning(type="submit") 
                        i.bi.bi-save.me-2
                        | Guardar Cambios
                    a.btn.btn-secondary(href="/clientes") Cancelar