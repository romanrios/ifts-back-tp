extends ../layout.pug

block content
    h2.mb-4 Detalle del Cliente
    
    .card.shadow-sm
        .card-body
            h4.card-title= cliente.nombre
            
            .list-group.list-group-flush
                .list-group-item.d-flex.justify-content-between
                    strong ID:
                    span= cliente._id
                .list-group-item.d-flex.justify-content-between
                    strong Teléfono:
                    span= cliente.telefono
                .list-group-item.d-flex.justify-content-between
                    strong Email:
                    span= cliente.email || 'No registrado'
                .list-group-item.d-flex.justify-content-between
                    strong Dirección:
                    span= cliente.direccion || 'No especificada'
                .list-group-item.d-flex.justify-content-between
                    strong Registrado el:
                    span= new Date(cliente.createdAt).toLocaleDateString()
                    
            .d-flex.gap-2.mt-4
                a.btn.btn-warning(href=`/clientes/${cliente._id}/editar`) 
                    i.bi.bi-pencil.me-2
                    | Editar
                a.btn.btn-secondary(href="/clientes") 
                    i.bi.bi-arrow-left.me-2
                    | Volver al Listado