extends ../layout

block content
  .d-flex.justify-content-between.align-items-center.mb-3
    h2.mb-0 Lista de Empleados
    a.btn.btn-success(href="/empleados/agregar") Agregar Empleado

  table.table.table-bordered
    thead
      tr
        th ID
        th Rol
        th √Årea
        th Acciones
    tbody
      each empleado in empleados
        tr
          td= empleado.id
          td= empleado.rol
          td= empleado.area
          td
            a.btn.btn-sm.btn-info(href=`/empleados/${empleado.id}`) Ver
