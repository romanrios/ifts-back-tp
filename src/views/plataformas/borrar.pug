extends ../layout

block content
  h2.mb-3 Confirmar borrado

  p.mb-2 ¿Eliminar esta plataforma?  

  ul
    li ID: #{plataforma._id}
    li Nombre: #{plataforma.nombre}
    li Tipo: #{plataforma.tipo}
    li Comisión: #{plataforma.comisionPorcentaje}%

  form(action=`/plataformas/${plataforma._id}?_method=DELETE` method="POST").d-flex.gap-2.mt-3
    button.btn.btn-danger(type="submit") Sí, borrar
    a.btn.btn-secondary(href="/plataformas") Cancelar
