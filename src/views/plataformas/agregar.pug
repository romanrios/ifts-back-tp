extends ../layout

block content
  h2.mb-3 Agregar Nueva Plataforma

  form(action="/plataformas/agregar" method="POST")
    .mb-3
      label.form-label(for="nombre") Nombre
      input.form-control(type="text" name="nombre" id="nombre" placeholder="Ej: Rappi" required)

    .mb-3
      label.form-label(for="tipo") Tipo
      input.form-control(type="text" name="tipo" id="tipo" placeholder="Ej: Delivery o Propia" required)

    .mb-3
      label.form-label(for="comisionPorcentaje") Comisi√≥n (%)
      input.form-control(type="number" step="0.01" min="0" max="100" name="comisionPorcentaje" id="comisionPorcentaje" placeholder="Ej: 15" required)

    .d-flex.gap-2
      button.btn.btn-primary(type="submit") Agregar Plataforma
      a.btn.btn-secondary(href="/plataformas") Cancelar
