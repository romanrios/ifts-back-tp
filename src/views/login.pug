extends layout

block content
  .row.justify-content-center
    .col-md-5
      .card.shadow-sm
        .card-body
          h3.text-center.mb-3 Iniciar Sesión

          if message
            .alert.alert-danger.mb-3= message

          form(action="/auth/login" method="POST")
            .mb-3
              label.form-label(for="username") Usuario
              input.form-control(
                type="text"
                name="username"
                id="username"
                placeholder="Ingrese su usuario"
                required
              )

            .mb-3
              label.form-label(for="password") Contraseña
              input.form-control(
                type="password"
                name="password"
                id="password"
                placeholder="Ingrese su contraseña"
                required
              )

            button.btn.btn-primary.w-100(type="submit") Ingresar

          .text-center.mt-3
            a(href="/auth/register") Crear una cuenta nueva
