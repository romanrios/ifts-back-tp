extends ../layout

block content
  h2.mb-3 Confirmar borrado

  p.mb-2 ¿Eliminar este pedido?  

  ul
    li ID: #{pedido.id}
    li Cliente: #{pedido.cliente}
    li Descripción: #{pedido.descripcion}
    li Precio: #{pedido.precio || '-'}
    li Plataforma: #{pedido.plataforma}
    li ID Empleado: #{pedido.idEmpleado}

  form(action=`/pedidos/${pedido.id}?_method=DELETE` method="POST").d-flex.gap-2.mt-3
    button.btn.btn-danger(type="submit") Sí, borrar
    a.btn.btn-secondary(href="/pedidos") Cancelar
